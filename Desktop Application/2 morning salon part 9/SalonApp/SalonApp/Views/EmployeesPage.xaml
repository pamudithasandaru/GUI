<UserControl
    x:Class="SalonApp.Views.EmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/ourteam.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        
        <!--  Define Row and Column Structure  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Buttons  -->
            <RowDefinition Height="Auto" />
            <!--  Input Fields  -->
            <RowDefinition Height="*" />
            <!--  DataGrid  -->
        </Grid.RowDefinitions>

        <!--  BUTTONS  -->
        <StackPanel
            Margin="0,0,0,10"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
    x:Name="btnAdd"
    Width="120"
    Height="40"
    Margin="5"
    Click="btnAdd_Click"
    Content="Add" FontFamily="poppins"
    Background="Red"
    Foreground="White"
    FontSize="16"
    FontWeight="Bold"
    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>



            <Button
x:Name="btnUpdate"
Width="120"
Height="40"
Margin="5"
Click="btnUpdate_Click"
Content="Update" FontFamily="poppins"
Background="Red"
Foreground="White"
FontSize="16"
FontWeight="Bold"
BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" 
                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
x:Name="btnDelete"
Width="120"
Height="40"
Margin="5"
                FontFamily="poppins"
Click="btnDelete_Click"
Content="Delete"
Background="Red"
Foreground="White"
FontSize="16"
FontWeight="Bold"
BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" 
                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!--  INPUT FIELDS  -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Margin="32,0,500,0"
                VerticalAlignment="Center" Grid.ColumnSpan="2">
                <TextBlock
                    Margin="0,0,0,5"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="Bold"
                    FontFamily="poppins"
                    Text="Name:" Height="28" />
                <TextBlock
                    Margin="0,0,0,5"
                    FontFamily="poppins"
                    Foreground="Azure"
FontSize="15"
                    FontWeight="Bold"
                    Text="Basic Salary:" Height="28" />
                <TextBlock
                    FontFamily="poppins"
                    FontWeight="Bold"
                    Foreground="Azure"
FontSize="15" 
                    Text="OT (Hours):" Height="25" Width="245" RenderTransformOrigin="-0.411,0.208" >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.496"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="304,0,213,0">
                <TextBox
                    x:Name="txtName"
                    Width="250"
                    Height="30"
                    Margin="0,0,0,5" />
                <TextBox
                    x:Name="txtBasicSalary"
                    Width="250"
                    Height="30"
                    Margin="0,0,0,5" />
                <TextBox
                    x:Name="txtOTHours"
                    Width="250"
                    Height="30"
                    Margin="0,0,0,5" />
            </StackPanel>
        </Grid>

        <!--  DATA GRID  -->
        <DataGrid
            x:Name="employeeTable"
            Grid.Row="2"
            Height="300"
            FontFamily="poppins"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding BasicSalary}"
                    Header="Basic Salary" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OTHours}"
                    Header="OT (Hours)" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FullSalary}"
                    Header="Full Salary" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
