                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <!--  Click Effect  -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#222" />
                                                <!--  Darken on click  -->
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock FontWeight="Bold" Text="Services" />
                </Button>

            </StackPanel>
        </Grid>


        <!--  Top Bar  -->
        <DockPanel
            Grid.Row="0"
            Grid.Column="1"
            Height="60"
            Background="#555">
            <TextBlock
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                FontFamily="poppins"
                FontSize="16"
                Foreground="White"
                Text="Welcome, User!" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    x:Name="btnSignOut"
                    Width="120"
                    Height="45"
                    Margin="5"
                    Padding="8,5"
                    Click="SignOut_Click"
                    Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E600E6" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="8,5" />
                            <Setter Property="Height" Value="45" />
                            <Setter Property="Width" Value="120" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <!--  Background Shape with Custom Rounded Corners  -->
                                            <Border
                                                x:Name="border"
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                CornerRadius="0,0,10,10">
                                                <Grid>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <!--  Hover Effect  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#C400C4" />
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect
                                                            BlurRadius="15"
                                                            Opacity="0.7"
                                                            ShadowDepth="4"
                                                            Color="Black" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <!--  Click Effect  -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#A800A8" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.Content>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                            <TextBlock
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Sign Out" />
                        </Grid>
                    </Button.Content>
                </Button>



                <Button
                    x:Name="btnExit"
                    Width="120"
                    Height="45"
                    Margin="5"
                    Padding="5"
                    Click="Exit_Click"
                    Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E600E6" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="5" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <!--  Custom Background Shape with Rounded Corners  -->
                                            <Border
                                                x:Name="border"
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                CornerRadius="0,0,10,10">
                                                <Grid>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <!--  Hover Effect  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E600E6" />
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect
                                                            BlurRadius="12"
                                                            Opacity="0.7"
                                                            ShadowDepth="3"
                                                            Color="Black" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <!--  Click Effect  -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#9A0007" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.Content>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                            <TextBlock
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Exit" />
                        </Grid>
                    </Button.Content>
                </Button>


            </StackPanel>
        </DockPanel>

        <!--  Main Content Area  -->
        <ContentControl
            Name="MainContent"
            Grid.Row="1"
            Grid.Column="1"
            Background="White">
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="Images/2.jpg"
                Stretch="UniformToFill" />
        </ContentControl>
    </Grid>
</Window>

