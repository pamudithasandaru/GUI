<Window
    x:Class="SalonApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Salon Management System"
    Width="900"
    Height="600"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <!--  Define Grid Columns  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <!--  Navigation Bar  -->
            <ColumnDefinition Width="*" />
            <!--  Main Content  -->
        </Grid.ColumnDefinitions>

        <!--  Define Grid Rows  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <!--  Top Bar  -->
            <RowDefinition Height="*" />
            <!--  Main Content  -->
        </Grid.RowDefinitions>

        <!--  Left Navigation Bar  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="220">
            <!--  Set Background Image  -->
            <Grid.Background>
                <ImageBrush ImageSource="Images/w (7).jpg" Stretch="UniformToFill" />
            </Grid.Background>

            <StackPanel>
                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                        <GradientStop Offset="0.0" Color="#AA000000" />
                        <!--  Darker at the top  -->
                        <GradientStop Offset="10.5" Color="#66000000" />
                        <!--  Lighter at the bottom  -->
                    </LinearGradientBrush>
                </StackPanel.Background>
                <!--  Adds a semi-transparent overlay  -->
                <!--  Salon Logo  -->
                <Image
                    Width="100"
                    Height="100"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Source="Images/icon.png" />

                <!--  Salon Motto  -->
                <TextBlock
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    FontFamily="poppins"
                    FontSize="20"
                    FontWeight="Black"
                    Foreground="White"
                    Text="Salon Lumii" />
                <TextBlock
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    FontFamily="coneria script demo"
                    FontSize="18"
                    FontWeight="DemiBold"
                    Foreground="White"
                    Text="Glow with Elegance" />

                <!--  Navigation Buttons  -->
                <Button
                    Height="40"
                    Margin="10"
                    Click="Customers_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="#444" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Padding" Value="10,5" />
                            <Setter Property="BorderThickness" Value="0" />
                            <!--<Setter Property="CornerRadius" Value="8"/>-->
                            <!--  Rounded corners  -->
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Opacity="0.3"
                                        Color="Black" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Padding="10"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!--  Hover Effect  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#666" />
                                                <!--  Lighten on hover  -->
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect
                                                            BlurRadius="10"
                                                            Opacity="0.5"
                                                            Color="Black" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <!--  Click Effect  -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#222" />
                                                <!--  Darken on click  -->
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock FontWeight="Bold" Text="Customers" />
                </Button>
                <Button
                    Height="40"
                    Margin="10"
                    Click="Bookings_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="#444" />
                            <Setter Property="FontSize" Value="14" />
