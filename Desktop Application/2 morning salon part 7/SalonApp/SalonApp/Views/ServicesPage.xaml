<UserControl
    x:Class="SalonApp.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <!--  Total Charge Bar  -->
        <Border
            Height="50"
            VerticalAlignment="Top"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="#E600E6" />
                    <!--  Light Pink  -->
                    <GradientStop Offset="1.0" Color="#FF69B4" />
                    <!--  Deep Pink  -->
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="8"
                    ShadowDepth="4"
                    Color="Gray" />
            </Border.Effect>
            <TextBlock
                x:Name="txtTotalCharge"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="Total Charge: $0.00" />
        </Border>

        <!--  ScrollViewer for scrolling content  -->
        <ScrollViewer Margin="0,50,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ServiceContainer">

                <!--  Search Bar  -->
                <TextBox
                    x:Name="txtSearch"
                    Width="300"
                    Height="40"
                    Margin="30,5,30,10"
                    Foreground="Gray"
                    Text="Search Services..."
                    TextChanged="txtSearch_TextChanged" />

                <!--  Service Card 1  -->
                <Border
                    x:Name="CardHairCut"
                    Margin="30,20,30,10"
                    Padding="10"
                    Background="White"
                    CornerRadius="10"
                    Tag="Hair Cut and Style">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="0.3"
                            ShadowDepth="2" />
                    </Border.Effect>
                    <StackPanel>
                        <Border ClipToBounds="True" CornerRadius="10">
                            <Image
                                Height="200"
                                Source="/Images/haircut.jpg"
                                Stretch="UniformToFill" />
                        </Border>
                        <StackPanel Margin="10">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Foreground="Gray"
                                Text="Tonging and Iron Curls, Rough-set paddle brush blow-dry, Head Shave for Adults and Kids, Women's Haircut, Blow dry, Shampoo &amp; Conditioning etc"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Hair Cut and Style" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Foreground="Gray"
                                Text="700$ ( With 10% SEASONAL OFFER )"
                                TextAlignment="Center" />
                            <Button
                                Width="150"
                                Height="40"
                                Margin="10"
                                HorizontalAlignment="Center"
                                Background="#E600E6"
                                BorderThickness="0"
                                Click="AddToCart_Click"
                                Content="TO THE CART"
                                Cursor="Hand"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Service Card 2  -->
                <Border
                    x:Name="CardHairColoring"
                    Margin="30,10,30,10"
                    Padding="10"
                    Background="White"
                    CornerRadius="10"
                    Tag="Hair Coloring">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="0.3"
                            ShadowDepth="2" />
                    </Border.Effect>
                    <StackPanel>
                        <Border ClipToBounds="True" CornerRadius="10">
                            <Image
                                Height="200"
                                Source="/Images/haircolor1.png"
                                Stretch="UniformToFill" />
                        </Border>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Hair Coloring" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Foreground="Gray"
                                Text="900$ ( With 5% SEASONAL OFFER )"
                                TextAlignment="Center" />
                            <Button
                                Width="150"
                                Height="40"
                                Margin="10"
                                HorizontalAlignment="Center"
                                Background="#E600E6"
                                BorderThickness="0"
                                Click="AddToCart_Click"
                                Content="TO THE CART"
                                Cursor="Hand"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White" />
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
