                                    <!-- Even Darker Red -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✖" FontSize="10" Margin="0,4,5,0"/>
                        <!-- Exit Icon -->
                        <TextBlock Text="Exit"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </DockPanel>

        <!--  Main Content Area  -->
        <ContentControl
            Name="MainContent"
            Grid.Row="1"
            Grid.Column="1"
            Background="White" />
    </Grid>
</Window>

