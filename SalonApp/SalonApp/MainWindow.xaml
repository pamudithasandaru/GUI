                    <TextBlock FontWeight="Bold" Text="Services" />
                </Button>

            </StackPanel>
        </Grid>


        <!--  Top Bar  -->
        <DockPanel
            Grid.Row="0"
            Grid.Column="1"
            Height="60"
            Background="#555">
            <TextBlock
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Text="Welcome, User!" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="5"
                    Background="Red"
                    Click="SignOut_Click"
                    Content="Sign Out"
                    Foreground="White" />
                <Button
                    Width="80"
                    Margin="5"
                    Background="DarkRed"
                    Click="Exit_Click"
                    Content="Exit"
                    Foreground="White" />
            </StackPanel>
        </DockPanel>

        <!--  Main Content Area  -->
        <ContentControl
            Name="MainContent"
            Grid.Row="1"
            Grid.Column="1"
            Background="White" />
    </Grid>
</Window>

